<div class="sidebar-item-inner">
	<div class="sidebar-row sidebar-item-title">
		<h2 class="sidebar-item-title-inner">
			{{t 'app.dashboard'}}
		</h2>
	</div>
	<div class="sidebar-row">
		<button class="primary-color dashboard-sidebar-add-course">
			<span class="dashboard-sidebar-add-course-inner">
				<i class="fa-plus fa"></i>{{t 'app.addnewproject'}}
			</span>
		</button>
        {{!TODO make these permissions a bit more specific?}}
        {{#ifHasPermissions "*/*:create,*/*:read,*/*:update,*/*:delete"}}
		<button class="dashboard-sidebar-import-course">
			<span class="dashboard-sidebar-import-course-inner">
				<i class="fa-upload fa"></i>{{t "app.importdashboardbutton"}}
			</span>
		</button>
        {{/ifHasPermissions}}
	</div>
    <div class="sidebar-row">
        <button class="dashboard-sidebar-my-courses">
            <span class="dashboard-sidebar-my-courses-inner">
                {{t 'app.myprojects'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="dashboard-sidebar-shared-courses">
            <span class="dashboard-sidebar-shared-courses-inner">
                {{t 'app.sharedprojects'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row sidebar-divide">
        <h3 class="sidebar-divide-inner">
            <i class="fa fa-search"></i>{{t 'app.search'}}
        </h3>
    </div>

    {{!-- inline search field with close button --}}
    <div class="sidebar-row">
        <div class="sidebar-row-input">
            <input type="text" class="dashboard-sidebar-filter-input dashboard-sidebar-filter-search-input" placeholder="{{t 'app.search'}}"/>
            <button class="dashboard-sidebar-filter-clear sidebar-inline-input-button"><i class="fa fa-times"></i></button>
        </div>
    </div>

    <div class="sidebar-row sidebar-divide">
        <h3 class="sidebar-divide-inner">
            <i class="fa fa-tags"></i>{{t 'app.tags'}}
        </h3>
    </div>

    {{!-- <div class="sidebar-row">
        <button class="dashboard-sidebar-tag sidebar-tag dashboard-sidebar-tag-archive" data-tag="archive">
            <span class="dashboard-sidebar-tag-archive-inner">
                <i class="fa fa-toggle-off"></i>Archive
            </span>
        </button>
    </div>

    <div class="sidebar-row">
        <button class="dashboard-sidebar-tag sidebar-tag dashboard-sidebar-tag-favourites" data-tag="favourites">
            <span class="dashboard-sidebar-tag-favourites-inner">
                <i class="fa fa-toggle-off"></i>Favourites
            </span>
        </button>
    </div> --}}

    <div class="sidebar-row">
        <button class="dashboard-sidebar-add-tag sidebar-filter-button sidebar-tag info-color">
            <span class="dashboard-sidebar-add-tag-inner">
                <i class="fa-plus fa"></i>{{t 'app.addtag'}}
            </span>
        </button>
    </div>

</div>
