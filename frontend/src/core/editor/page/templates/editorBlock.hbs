{{>part_editorItemSidebar}}

<div class="block-inner">

    <div class="block-detail unselectable">
        <h4 class="block-title">
            {{#if displayTitle}}
                {{{displayTitle}}}
            {{else}}
                {{title}}
            {{/if}}
        </h4>
        <div class="block-body">{{{body}}}</div>
    </div>

    <div class="page-components clearfix"></div>
    {{#if layoutOptions}}
        <div class="add-control"> {{!-- {{t 'app.addcomponent'}} --}}
            <a href="#" class="btn btn-secondary-hollow left add-component"><i class="fa fa-plus"></i>Left Component</a>
            <a href="#" class="btn btn-secondary-hollow full add-component"><i class="fa fa-plus"></i>Full Component</a>
            <a href="#" class="btn btn-secondary-hollow right add-component"><i class="fa fa-plus"></i>Right Component</a>
        </div>
    {{/if}}

</div>